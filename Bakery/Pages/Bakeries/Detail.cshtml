@page "{foodId:int}"
@model Bakery.Pages.Bakeries.DetailModel
@{
    ViewData["Title"] = "Detail";
}

<h1>Details for @Model.Food.Name</h1>


<div class="form-row" style="margin-top:60px; text-align:center;  font-size:20px; ">
    <div class="form-group col-sm-6">
        Ingredients: @Model.Food.Ingredients
    </div>
    <div class="form-group col-sm-6">
        Calories: @Model.Food.Calories
    </div>

</div>

    <a asp-page="./List" class="btn btn-primary">Back</a>
