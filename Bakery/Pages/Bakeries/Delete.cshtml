@page "{foodId:int}"
@model Bakery.Pages.Bakeries.DeleteModel
@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>
<div class="alert alert-danger">
    Are you sure you want to delete @Model.Food.Name?
</div>
<form method="post">
    <button type="submit" class="btn btn-danger">Yes!</button>
    <a asp-page="List" class="btn btn-outline-primary">Cancel</a>
</form>

